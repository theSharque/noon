server {
	server_name localhost 127.0.0.1;
	root /var/www/apc;
	allow 127.0.0.1;
	allow 5.9.140.7;
	deny all;

	location /apc {
		access_log off;
		index index.php;
	}

	location /nginx_status {
		stub_status on;
		access_log   off;
	}

	location ~ \.php$ {
		include		fastcgi_params;
		fastcgi_pass	unix:/var/run/php5-fpm.sock;
		fastcgi_index	index.php;
	}
}
