                $out .= "&cb_l$i=".($info->level - $i)."&cb_d$i=page.php?id=210%26x=$x%26cl=".($info->level - $i);
              }
            } else {
              if( $info->busy_type == 2 ) {
                $out = "detail=Газодобывающий завод занят&btLabel=Остановить добычу&btOnClick=page.php?id=277%26x=$x";
              } else {
                $out = "detail=Газодобывающий завод улучшается";
              }
            }
          }
          break;
  
        case 'Z':
          if( !$user->owner ) {
            $out = "detail=Термоядерный преобразователь";
          } else {
            if( $info->busy == 0 ) {
              $out = "detail=Термоядерный преобразователь";
              $items = db_fetch_array( "SELECT o.id, o.name, o2.name res
                                          FROM sintez s
                                    INNER JOIN objects o ON o.id = s.object_id
                                    INNER JOIN objects o2 ON o2.id = s.res_id
                                      ORDER BY IF(o.id={$info->last},0,1), o.name, o.id" );
          
              if( count( $items ) > 0 ) {
                $out .= "&cb_h=Получаемый материал";
                $out .= "&cb_c=".count( $items );
                $i=0;
                foreach( $items as $item ) {
                  $out .= "&cb_l$i={$item['name']} ({$item['res']})&cb_d$i=page.php?id=284%26x=$x%26oid={$item['id']}";
                  $i++;
                }
              }
            } else {
              if( $info->busy_type == 8 ) {
                $obj = db_fetch_row( "SELECT o.name
                                        FROM orbits_make p
                                  INNER JOIN objects o ON p.object_id = o.id
                                       WHERE p.event_id = {$info->busy_id}" );
  
                $out = "detail=Синтезируется {$obj['name']}&btLabel=Остановить&btOnClick=page.php?id=277%26x=$x";
              } else {
                $out = "detail=Термоядерный преобразователь улучшается";
              }
            }
          }
          break;
        }
      } else {
        $out = "detail=Открытый космос";
      }
    printOut( $out );
  }
