<?php

  global $user;

  if( isset( $_GET['clear'] ) && $_GET['clear'] == 1 ) {
    $out = 'err=0';

    $x = $_GET['x'];
    $y = $_GET['y'];

    db_safe( $x );
    db_safe( $y );

    db_query( "DELETE FROM hyper_hint WHERE x = $x AND y = $y AND ( user_id = ".$user->uid." ) OR ".$user->uid." = ( SELECT own FROM aliance WHERE id = aliance )" );
  } elseif ( isset( $_GET['text'] ) && $_GET['text'] ) {
    $out = 'err=0';

    $x = $_GET['x'];
    $y = $_GET['y'];
    $text = $_GET['text'];
    $type = $_GET['type'];

    db_safe( $text );
    $text = decode_in( $text );

    if( $user->aliance > 0 && $_GET['vis'] == 1 ) {
      $vis = $user->aliance;

      send_msg( $user->uid, 8, "Участник альянса {$user->login} поставил общую метку на карте галактики \"$text\", координаты $x:$y", 20 );
    } else {
      $vis = 0;
    }


    db_safe( $x );
    db_safe( $y );
    db_safe( $type );

    db_query( "INSERT IGNORE INTO hyper_hint ( user_id, x, y, text, type, aliance ) VALUES ( {$user->uid}, $x, $y, '$text', $type, $vis )" );
  } else {
    $out = 'err=1';
  }

  printOut( $out );
