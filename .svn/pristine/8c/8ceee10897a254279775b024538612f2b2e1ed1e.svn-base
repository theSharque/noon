       ON DUPLICATE KEY UPDATE last = $last" );
*/
        $out .= "&btLabel=".t( 'Начать сборку' )."&btOnClick=page.php?id=279%26oid=$oid%26l=$last%26x=$x%26count=";

        $result = db_fetch_row( "SELECT count(*) cnt FROM robots WHERE user_id = {$user->uid} AND status = 0" );
        if( $result['cnt'] > 0 ) {
          $out .= "&btRobot=".$result['cnt'];
        }
      }
  
      printOut( $out );
    }
  }

