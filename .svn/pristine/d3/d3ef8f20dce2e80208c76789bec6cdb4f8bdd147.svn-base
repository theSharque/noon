html, body {
	margin: 0;
	padding: 0;
	background-color: #000000;
}

html, body, table, td, a {
	color: #ffffff;
	font-family: Verdana, Tahoma, Geneva, Arial, Helvetica, sans-serif;
	font-size: 14px;
}

body {
	background-image: url("../images/bg_flame.jpg");
	background-position: center top;
	background-repeat: repeat-y;
}

a {
	text-decoration: underline;
}

pre {
	white-space: pre-wrap;       /* css-3 */
	white-space: -moz-pre-wrap !important;  /* Mozilla, since 1999 */
	white-space: -pre-wrap;      /* Opera 4-6 */
	white-space: -o-pre-wrap;    /* Opera 7 */
	word-wrap: break-word;       /* Internet Explorer 5.5+ */
	width: 99%;
}

#maincontainer {
	background-image: url("../images/mainbg_hi.jpg");
	background-position: top;
	background-repeat: repeat-x;
}

.leftborder {
	background-image: url("../images/mainborderleftmiddle.jpg");
	background-repeat: repeat;
}

.rightborder {
	background-image: url("../images/mainborderrightmiddle.jpg");
	background-repeat: repeat;
}

.versiontext a {
	color: #707070;
	font-size: 10px;
	padding: 10px;
}

#statscontainer {
	position: absolute;
	left: 25px;
	top: 20px;
	width: 285px;
	height: 180px;
	overflow: auto;
}

#statscontainer h3 {
	margin: 0px;
	font-size: 18px;
}

#topmenu {
	background-image: url("../images/topmenubg.png");
	background-repeat: repeat-x;
}

.maintexttableinternal {
	background-color: #00152c;
	background-image: url("../images/maintexttablebg.jpg");
	background-position: top;
	background-repeat: repeat-x;
}

.maintexttableleft {
	background-image: url("../images/maintexttableleftbg.gif");
	background-repeat: repeat-y;
}

.maintexttableright {
	background-image: url("../images/maintexttablerightbg.gif");
	background-repeat: repeat-y;
}

.maintextcontainer {
	background-image: url("../images/maintexttabletextbg.png");
	background-position: top right;
	background-repeat: no-repeat;
	padding: 20px;
	text-align: left;
}

.maintextcontainer h3 {
	margin: 0px;
	font-size: 18px;
}

.secondarytableinternal {
	background-color: #00152c;
	background-image: url("../images/secondarytablebg.jpg");
	background-position: top;
	background-repeat: repeat-x;
}

.secondarytableleft {
	background-image: url("../images/secondarytableleftbg.gif");
	background-repeat: repeat-y;
}

.secondarytableright {
	background-image: url("../images/secondarytablerightbg.gif");
	background-repeat: repeat-y;
}

.secondarytabletextcontainer {
	background-image: url("../images/secondarytabletextbg.png");
	background-position: top right;
	background-repeat: no-repeat;
	padding: 13px;
}

.secondarytabletextcontainer h3 {
	margin: 0px;
	font-size: 18px;
}

.logintablecontainer h3 {
	margin: 0px;
	font-size: 18px;
}

.logintextfield {
	width: 155px;
	border: 2px solid #085394;
}

.statstablecontainer h3 {
	margin: 0px;
	font-size: 18px;
}

.footertable {
	background-image: url("../images/footerbg.png");
	background-repeat: repeat;
}

.footertabletextcontainer, .footertabletextcontainer a {
	font-size: 10px;
	padding: 2px;
}

.footsape, .footsape a {
	color: #404040;
	font-size: 10px;
	padding: 2px;
}
