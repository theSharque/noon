<?php

  include( './pages/environment/orbit.dic' );

  global $user;

  if( $user->place_type == 0 && isset( $_GET['x'] ) && $_GET['x'] >= 0 ) {

    $planet_id = $user->place_id;
    $x = $_GET['x'];

    db_query( "UPDATE LOW_PRIORITY planets_active SET last_orb=$x WHERE id=$planet_id" );

    $line = db_fetch_val( "SELECT lin FROM orbits_map WHERE id = $planet_id", 'lin' );
    if( strlen( $line ) >= $x ) {
      $info = get_orbit_info( $x );
      if( $line{$x} == '0' || $line{$x} == 'B' ) {
        $out = 'info=<b><font color="#FFFF00">'.t('Открытый космос').'</font></b>';
      } else {
        $out = 'info=<b><font color="#00FFFF">'.t( '%s %d уровня', array( $orb_decode[ $line{$x} ], $info->level ) ).'</font></b>';
      }

      if( $line{$x} == '0' ) {
        if( $user->owner ) {
          $out .= "&desc=\t".t('Орбитальная точка стояния. В данном месте на орбите можно построить любое доступное сооружение.');
        } else {
          $out .= "&desc=\t".t('Орбитальная точка стояния.');
        }
      } else {
        $desc = db_fetch_row( "SELECT b.desc FROM buildings b WHERE b.place_type = 0 AND map_char = '{$line{$x}}'" );
        switch( $line{$x} ) {

          case 'A':
            $out .= '&desc='.$desc['desc']."<font color=\"#00FF00\">".( 1000 + ( $info->level * 250 ) )."</font>";
            break;

          case 'I':
            $out .= '&desc='.$desc['desc']."<font color=\"#00FF00\">".( 120000 + ( $info->level * 15000 ) )."</font>";
            break;
    
          case 'V':
            $out .= '&desc='.$desc['desc']."Сила выстрела\t\t".( 5 + 5 * get_book_level( 22 ) )."\n".
              "Количество\t\t\t".($info->level * 10);
            break;

          case 'X':
            $out .= '&desc='.$desc['desc']."Сила выстрела\t\t".( 50 + 50 * get_book_level( 21 ) )."\n".
              "Количество\t\t\t".($info->level);
            break;

          case 'Y':
            $out .= '&desc='.$desc['desc']."Сила выстрела\t\t".($info->level + intval( $info->level / 4 * get_book_level( 24 )));
            break;
    
          default:
            $out .= '&desc='.$desc['desc'];
            break;
        }

        $defence = db_fetch_val( "SELECT IFNULL( MAX( status ), 0 ) status
                                    FROM defence
                                   WHERE place_type = 0 AND place_id = $planet_id AND user_id != ".$user->uid, 'status' );

        $defender = true;
        if( $defence == 0 ) {
          $def_planet = db_fetch_row( "SELECT p.orbit_user, UNIX_TIMESTAMP(NOW()) - UNIX_TIMESTAMP(p.orbit_time) orbit_time, u.login
                                 FROM planets p
                           INNER JOIN users u ON u.id = p.orbit_user
                                WHERE p.id = ".$user->place_id );

          if( $def_planet['orbit_user'] != '' && $def_planet['orbit_user'] != $user->uid ) {
            if( $def_planet['orbit_time'] < 259200 ) {
              $defender = false;
            }
          }
        }

        if( $line{ $x } != 'T' && 
            $line{ $x } != 'B' && 
            $line{ $x } != "\r" && 
            $line{ $x } != "\n" && 
            $line{ $x } != '' && 
            $user->owner &&
            $defence == 0 && $defender ) {
          $out .= "&destroy=1";
        }
      }
    } else {
      $out = 'info=<b><font color="#FFFF00">Открытый космос</font></b>';
      $out .= "&desc=\tВ этой точке невозможно строительство, слишком низкая гравитация.";
    }
    printOut( $out );
  }
